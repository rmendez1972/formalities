<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <resource-ref>
        <res-ref-name>jdbc/tramites</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <servlet>
        <servlet-name>ControladorSesion</servlet-name>
        <servlet-class>controladores.ControladorSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorUnidadAdtva</servlet-name>
        <servlet-class>controladores.ControladorUnidadAdtva</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorDirecciones</servlet-name>
        <servlet-class>controladores.ControladorDirecciones</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorTramite</servlet-name>
        <servlet-class>controladores.ControladorTramite</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorUsuario</servlet-name>
        <servlet-class>controladores.ControladorUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorEstatus</servlet-name>
        <servlet-class>controladores.ControladorEstatus</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorBase</servlet-name>
        <servlet-class>controladores.ControladorBase</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorPermiso</servlet-name>
        <servlet-class>controladores.ControladorPermiso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorRequisito</servlet-name>
        <servlet-class>controladores.ControladorRequisito</servlet-class>
        
    </servlet>
    <servlet>
        <servlet-name>ControladorAdjunto</servlet-name>
        <servlet-class>controladores.ControladorAdjunto</servlet-class>
        
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorSesion</servlet-name>
        <url-pattern>/controladorsesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorUnidadAdtva</servlet-name>
        <url-pattern>/controladorunidadadtva</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ControladorDirecciones</servlet-name>
        <url-pattern>/controladordirecciones</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorTramite</servlet-name>
        <url-pattern>/controladortramite</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorUsuario</servlet-name>
        <url-pattern>/controladorusuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorEstatus</servlet-name>
        <url-pattern>/controladorestatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorBase</servlet-name>
        <url-pattern>/controladorbase</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorPermiso</servlet-name>
        <url-pattern>/controladorpermiso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorRequisito</servlet-name>
        <url-pattern>/controladorrequisito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorAdjunto</servlet-name>
        <url-pattern>/controladoradjunto</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

</web-app>
